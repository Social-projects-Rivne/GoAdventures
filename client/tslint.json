{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "triple-equals": true,
        "quotemark": [true, "single"],
        "semicolon":true,
        "trailing-comma": true,
        "new-parens": true,
        "whitespace":false,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [ "info", "log", "time", "timeEnd"]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        },
        "no-unused-expression": true
    }
}